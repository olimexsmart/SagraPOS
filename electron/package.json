{
  "name": "sagra-pos",
  "productName": "SagraPOS",
  "homepage": "https://github.com/olimexsmart/SagraPOS",
  "version": "1.0.0",
  "description": "Easy to use POS application for small fairs, events, games, and obviously Italian-style sagre",
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "make": "electron-builder build"
  },
  "keywords": [],
  "author": {
    "name": "Luca Olivieri",
    "email": "gliolivieri@live.it"
  },
  "license": "MIT",
  "dependencies": {
    "better-sqlite3": "^9.6.0",
    "electron-squirrel-startup": "^1.0.0",
    "express": "^4.19.2",
    "jimp": "^0.22.12",
    "multer": "^1.4.5-lts.1",
    "node-thermal-printer": "^4.4.2"
  },
  "devDependencies": {
    "electron": "30.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "artifactName": "${productName}_devBuild.${ext}",
    "directories": {
      "buildResources": "images"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Office"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.productivity",
      "icon": "images/icon.icns"
    }
  }
}
